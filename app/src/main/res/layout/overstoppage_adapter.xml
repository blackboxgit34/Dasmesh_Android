<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLiveStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_x"
        app:cardBackgroundColor="@color/primary_little_fade"
        app:cardCornerRadius="@dimen/margin_x"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/tvVehicleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle Number"
                android:padding="@dimen/margin_v"
                android:fontFamily="@font/poppins_bold"
                android:drawablePadding="@dimen/margin_v"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@color/light_black"
                android:drawableStart="@drawable/ic_caricon"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_v"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_v"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/margin_v"
                            android:drawableStart="@drawable/ic_stoppages"
                            android:text="OverStoppage Count"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/tvStoppageCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_weight="0.6"
                            android:gravity="end"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:textSize="14sp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_v"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/margin_v"
                            android:drawableStart="@drawable/ic_stoppages"
                            android:text="OverStoppage Limit"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/tvStoppageLimit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_weight="0.6"
                            android:gravity="end"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:textSize="14sp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_v"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_weight="0.6"
                            android:textSize="12sp"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/margin_v"
                            android:drawableStart="@drawable/ic_duration"
                            android:text="Stoppage Time"
                            />

                        <TextView
                            android:id="@+id/tvtime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="end"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_weight="0.4"
                            android:textSize="14sp"
                            />

                    </LinearLayout>

                </LinearLayout>






            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>