<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_x"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.vipulasri.ticketview.TicketView
            android:id="@+id/ticketView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_600"
            app:ticketBackgroundColor="@color/grey_two"
            app:ticketDividerPadding="0dp"
            app:ticketDividerType="dash"
            app:ticketElevation="14dp"
            app:ticketOrientation="horizontal"
            app:ticketScallopPositionPercent="50"
            app:ticketScallopRadius="10dp"
            app:ticketShowBorder="false"
            app:ticketShowDivider="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_x"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_v"
                android:layout_marginTop="@dimen/margin_v"
                android:layout_marginEnd="@dimen/margin_x"
                android:drawablePadding="@dimen/margin_x"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_v"
                android:drawableStart="@drawable/ic_calendar"
                android:drawableTint="@color/primary"
                android:text="Bill Cycle"
                android:textColor="@color/primary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_x"
                android:background="@color/dark_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_v"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/font_16"
                    android:textColor="@color/primary"
                    android:drawableStart="@drawable/ic_blackbox"
                    android:drawablePadding="@dimen/margin_x"
                    android:layout_marginVertical="@dimen/margin_x"
                    android:text="Blackbox Details"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_v"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textColor="@color/primary"
                        android:gravity="center_vertical"
                        android:text="Bill No"
                        android:textSize="@dimen/font_14"
                        android:fontFamily="@font/poppins_semibold"
                        />

                    <TextView
                        android:id="@+id/tvBillNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:gravity="end"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginEnd="@dimen/margin_v"
                        android:layout_weight="0.4"
                        android:textSize="14sp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_x"
                    android:layout_marginStart="@dimen/margin_v"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:text="Blackbox Count"
                        />
                    <TextView
                        android:id="@+id/tvBoxcount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="0.5"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:singleLine="true"
                        android:layout_marginEnd="@dimen/margin_v"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llDueDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_x"
                    android:layout_marginStart="@dimen/margin_v"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:text="Due Date"
                        />
                    <TextView
                        android:id="@+id/tvDueDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="end"
                        android:singleLine="true"
                        android:layout_marginEnd="@dimen/margin_v"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_x"
                    android:layout_marginStart="@dimen/margin_v"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:layout_weight="0.5"
                        android:layout_marginTop="@dimen/margin_3"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/margin_v"
                        android:text="Current Balance"

                        />
                    <TextView

                        android:id="@+id/tvCurrentBal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="end"
                        android:singleLine="true"
                        android:layout_marginEnd="@dimen/margin_v"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center_vertical"
                    android:text="Amount Details"
                    android:textSize="@dimen/font_16"
                    android:drawableStart="@drawable/ic_invoice"
                    android:drawablePadding="@dimen/margin_x"
                    android:layout_marginTop="@dimen/profile_size"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_x"
                    android:layout_marginStart="@dimen/margin_v"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_vertical"
                        android:text="Other Charges"
                        />
                    <TextView
                        android:id="@+id/tvOtherCharge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginEnd="@dimen/margin_v"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginStart="@dimen/margin_v"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_vertical"
                        android:text="Discount"
                        />
                    <TextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.4"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_semibold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginStart="@dimen/margin_v"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:text="Previous Balance"
                        />
                    <TextView
                        android:id="@+id/tvPreviousBalnce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="end"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_marginStart="@dimen/margin_v"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:text="Total Balance with 18% GST"
                        />
                    <TextView
                        android:id="@+id/tvtotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.7"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="end"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/margin_x"
                android:layout_marginTop="@dimen/margin_x"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvPayNow"
                    android:layout_width="@dimen/margin_200"
                    android:layout_height="wrap_content"
                    android:text="Pay Now"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/red"
                    android:padding="@dimen/margin_v"
                    android:background="@drawable/curve_semicircle"
                    android:layout_margin="@dimen/margin_x"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>