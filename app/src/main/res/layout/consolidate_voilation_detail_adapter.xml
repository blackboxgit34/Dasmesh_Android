<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_x"
        android:layout_marginBottom="@dimen/margin_x"
        app:cardBackgroundColor="@color/primary_little_fade"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_x"
        app:cardCornerRadius="@dimen/margin_x">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_x">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_user"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/tvDriverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Driver Name"
                    android:layout_marginTop="@dimen/margin_2"
                    android:paddingStart="@dimen/margin_v"
                    android:textSize="@dimen/font_12"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/poppins_semibold"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_x"
                android:layout_marginBottom="@dimen/margin_x"
                android:layout_marginHorizontal="@dimen/margin_x">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Voilation Type"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/font_12"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/tvVoilationType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/med_grey"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/margin_v"
                    android:textSize="@dimen/font_10"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_x"
                android:layout_marginBottom="@dimen/margin_x"
                android:layout_marginHorizontal="@dimen/margin_x">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Date/Time"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/font_12"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/med_grey"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/margin_v"
                    android:textSize="@dimen/font_10"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_x"
                android:layout_marginBottom="@dimen/margin_x"
                android:layout_marginHorizontal="@dimen/margin_x">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Location"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/font_12"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_x"
                android:layout_marginHorizontal="@dimen/margin_x">

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="Overspeed"
                    android:layout_weight="1"
                    android:textSize="@dimen/font_10"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>