<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.ui.vehicleStatus.vehicleDetails.VehicleDetailActivity">



    <FrameLayout
        android:id="@+id/fLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"
       >

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_90"
            />



        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_520"
            android:layout_gravity="bottom">
            <FrameLayout
                android:id="@+id/fBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curvetop_sheet"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                android:layout_gravity="bottom"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_remove"
                    android:layout_marginTop="@dimen/margin_v"
                    android:layout_gravity="center|top"
                    />

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nsScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_12"
                            android:textColor="@color/black"
                            android:drawableStart="@drawable/ic_location"
                            android:gravity="center_vertical"
                            android:drawablePadding="@dimen/margin_v"
                            android:lines="2"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginHorizontal="@dimen/margin_xx"
                            android:text="Hno 123 Sector 35 C chandigarh, India."/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/margin_v"
                            android:weightSum="3">
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvProgressStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.1"
                                android:text="Moving"
                                android:layout_marginStart="@dimen/margin_xx"
                                android:gravity="center"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/round_background"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/black"
                                android:textSize="@dimen/font_10" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTotalStatusTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.05"
                                android:text="1H 30M"
                                android:drawablePadding="@dimen/margin_v"
                                android:drawableStart="@drawable/ic_time"
                                android:layout_marginStart="@dimen/margin_x"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/med_grey"
                                android:textSize="@dimen/font_10" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvDataDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.85"
                                android:textColor="@color/med_grey"
                                android:gravity="end|center_vertical"
                                android:layout_marginEnd="@dimen/margin_xx"
                                android:text="Update at: 15 Aug 2022"
                                android:layout_gravity="center_vertical"
                                android:backgroundTint="@color/green"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="@dimen/font_10" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/margin_xx"
                            android:layout_marginBottom="@dimen/margin_v"
                            android:background="@color/primary_little_fade"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/margin_xx"
                            android:layout_marginTop="@dimen/margin_x"
                            android:layout_marginHorizontal="@dimen/margin_x"
                            app:cardBackgroundColor="@color/primaryblack">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="@dimen/margin_v"
                                    android:weightSum="3">

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">

                                        <ImageView
                                            android:layout_width="@dimen/margin_25"
                                            android:layout_height="@dimen/margin_25"
                                            android:src="@drawable/ic_speed"
                                            app:tint="@color/med_grey" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textAllCaps="true"
                                            android:text="Speed"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/dark_grey"/>
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvSpeed"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textAllCaps="true"
                                            android:text="66 k/h"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/black"/>


                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:layout_width="@dimen/margin_25"
                                            android:layout_height="@dimen/margin_25"
                                            app:tint="@color/med_grey"
                                            android:src="@drawable/ic_driven"/>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textAllCaps="true"
                                            android:text="Driven"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/dark_grey"/>
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvDistance"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textAllCaps="true"
                                            android:text="90 km"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/black"/>


                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">
                                        <ImageView
                                            android:layout_width="@dimen/margin_25"
                                            android:layout_height="@dimen/margin_25"
                                            app:tint="@color/med_grey"
                                            android:src="@drawable/ic_stoppages"/>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textAllCaps="true"
                                            android:text="Stoppages"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/dark_grey"/>
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvStoppageTime"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:text="6 min"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/black"/>


                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginHorizontal="@dimen/margin_xx"
                                    android:background="@color/primary_little_fade"
                                    />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="@dimen/margin_v"
                                    android:weightSum="3">

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">

                                        <ImageView
                                            android:layout_width="@dimen/margin_25"
                                            android:layout_height="@dimen/margin_25"
                                            android:layout_marginTop="@dimen/margin_v"
                                            android:src="@drawable/ic_speed"
                                            app:tint="@color/med_grey" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textAllCaps="true"
                                            android:layout_marginTop="@dimen/margin_v"
                                            android:text="Parking"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/dark_grey"/>

                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_marginTop="@dimen/margin_x"
                                        android:layout_weight="1">
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvParkAtLastStop"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textAllCaps="true"
                                            android:text="00:01"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/black"/>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:layout_marginTop="@dimen/margin_v"
                                            android:text="At Last Stop"
                                            android:textSize="@dimen/font_10"
                                            android:textColor="@color/dark_grey"/>



                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginTop="@dimen/margin_x"
                                        android:gravity="center"
                                        android:layout_weight="1">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvParkingTimeTotal"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textAllCaps="true"
                                            android:text="00:05"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/black"/>
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:layout_marginTop="@dimen/margin_v"
                                            android:text="Total"
                                            android:textSize="@dimen/font_10"
                                            android:textColor="@color/dark_grey"/>


                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginHorizontal="@dimen/margin_xx"
                                    android:background="@color/primary_little_fade"
                                    />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginVertical="@dimen/margin_v"
                                    android:weightSum="3">

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_weight="1">

                                        <ImageView
                                            android:layout_width="@dimen/margin_25"
                                            android:layout_height="@dimen/margin_25"
                                            android:layout_marginTop="@dimen/margin_v"
                                            android:src="@drawable/ic_duration"
                                            app:tint="@color/med_grey" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:textAllCaps="true"
                                            android:layout_marginTop="@dimen/margin_v"
                                            android:text="Moving"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/dark_grey"/>

                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center"
                                        android:layout_marginTop="@dimen/margin_x"
                                        android:layout_weight="1">
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvMovingFromLastStop"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textAllCaps="true"
                                            android:text="40:01"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/black"/>

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:layout_marginTop="@dimen/margin_v"
                                            android:text="From Last Stop"
                                            android:textSize="@dimen/font_10"
                                            android:textColor="@color/dark_grey"/>



                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_marginTop="@dimen/margin_x"
                                        android:gravity="center"
                                        android:layout_weight="1">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvTotalMovingTime"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_medium"
                                            android:textAllCaps="true"
                                            android:text="40:01"
                                            android:textSize="@dimen/font_12"
                                            android:textColor="@color/black"/>
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/poppins_semibold"
                                            android:layout_marginTop="@dimen/margin_v"
                                            android:text="Total"
                                            android:textSize="@dimen/font_10"
                                            android:textColor="@color/dark_grey"/>


                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </LinearLayout>



                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/margin_x"
                            android:layout_marginVertical="@dimen/margin_x"
                            android:layout_marginHorizontal="@dimen/margin_x"
                            app:cardBackgroundColor="@color/primaryblack">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_v"
                                android:layout_marginHorizontal="@dimen/margin_xx"
                                android:orientation="vertical">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">
                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="@dimen/margin_v"
                                        android:layout_marginHorizontal="@dimen/margin_xx"
                                        android:weightSum="2"
                                        android:layout_weight="1"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/margin_v"
                                            android:layout_weight="1"
                                            android:textSize="@dimen/font_10"
                                            android:textColor="@color/black"
                                            android:drawablePadding="@dimen/margin_v"
                                            android:fontFamily="@font/poppins_regular"
                                            android:text="Battery:"
                                            android:drawableStart="@drawable/ic_battery_green" />
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvBatteryStatus"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/margin_v"
                                            android:layout_weight="1"
                                            android:textSize="@dimen/font_10"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/poppins_regular"
                                            android:text="Charged"
                                            />
                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="@dimen/margin_v"
                                        android:layout_marginHorizontal="@dimen/margin_xx"
                                        android:weightSum="2"
                                        android:layout_weight="1"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/margin_20"
                                            android:layout_marginEnd="@dimen/margin_v"
                                            android:layout_weight="0.8"
                                            android:textSize="@dimen/font_10"
                                            android:textColor="@color/black"
                                            android:gravity="center_vertical"
                                            android:drawablePadding="@dimen/margin_v"
                                            android:fontFamily="@font/poppins_regular"
                                            android:text="Fuel:"
                                            android:drawableStart="@drawable/ic_fuel_green" />
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvFuelStatus"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/margin_v"
                                            android:layout_weight="1.2"
                                            android:textSize="@dimen/font_10"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/poppins_regular"
                                            android:text="Full"
                                            />
                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="@dimen/margin_v"
                                        android:layout_marginHorizontal="@dimen/margin_xx"
                                        android:weightSum="2"
                                        android:layout_weight="1"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/margin_20"
                                            android:layout_marginEnd="@dimen/margin_v"
                                            android:layout_weight="1"
                                            android:textSize="@dimen/font_10"
                                            android:textColor="@color/black"
                                            android:drawablePadding="@dimen/margin_v"
                                            android:gravity="center_vertical"
                                            android:fontFamily="@font/poppins_regular"
                                            android:text="AC:"
                                            android:drawableStart="@drawable/ic_ac" />
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvAcStatus"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/margin_v"
                                            android:layout_weight="1"
                                            android:textSize="@dimen/font_10"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/poppins_regular"
                                            android:text="On"
                                            />
                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginVertical="@dimen/margin_v"
                                        android:layout_marginHorizontal="@dimen/margin_xx"
                                        android:weightSum="2"
                                        android:layout_weight="1"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/margin_20"
                                            android:layout_marginEnd="@dimen/margin_v"
                                            android:layout_weight="0.8"
                                            android:textSize="@dimen/font_10"
                                            android:drawablePadding="@dimen/margin_v"
                                            android:textColor="@color/black"
                                            android:gravity="center_vertical"
                                            android:fontFamily="@font/poppins_regular"
                                            android:text="Ignition:"
                                            android:drawableStart="@drawable/ic_ignition_on" />
                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvIgnitionStatus"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginEnd="@dimen/margin_v"
                                            android:layout_weight="1.2"
                                            android:textSize="@dimen/font_10"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/poppins_regular"
                                            android:text="On"
                                            />
                                    </androidx.appcompat.widget.LinearLayoutCompat>


                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/margin_v"
                            android:layout_marginBottom="@dimen/margin_x"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tvPlayback"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Play Back"
                                android:background="@drawable/rect_curve_box"
                                android:textSize="@dimen/font_14"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:paddingHorizontal="@dimen/margin_xx"
                                android:layout_gravity="center_vertical"
                                android:drawableStart="@drawable/ic_play"
                                android:layout_marginStart="@dimen/margin_30"
                                android:layout_marginEnd="@dimen/margin_x"
                                android:textAllCaps="true"
                                android:fontFamily="@font/poppins_semibold"
