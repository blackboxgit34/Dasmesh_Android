<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_x"
        android:layout_marginBottom="@dimen/margin_x"
        app:cardBackgroundColor="@color/primary_little_fade"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_x"
        app:cardCornerRadius="@dimen/margin_x">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/tvVehicleNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/margin_x"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="CH 01-AA-0987"
                    android:drawableStart="@drawable/ic_stoppages"
                    android:singleLine="true"
                    android:drawablePadding="@dimen/margin_x"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_x"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvStopTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="lorem ipsum dummy text"
                        android:textColor="@color/med_grey_two"
                        android:textSize="@dimen/font_12"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="@dimen/margin_v"
                        android:fontFamily="@font/poppins_medium"/>

                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="@dimen/margin_x">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvStopCount"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="@dimen/margin_50"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_circle"
                    android:backgroundTint="@color/light_black"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center"
                    android:text="20"
                    android:textColor="@color/secondary_yellow"
                    android:textSize="@dimen/font_16" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>