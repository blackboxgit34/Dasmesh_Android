<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_x"
        android:layout_marginBottom="@dimen/margin_x"
        app:cardBackgroundColor="@color/primary_little_fade"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_x"
        app:cardCornerRadius="@dimen/margin_x">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_x"
                android:layout_marginHorizontal="@dimen/margin_x"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvVehicleName"
                    android:layout_width="@dimen/margin_200"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center_vertical"
                    android:text="CH 01-AA-0987"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_14" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/margin_xx"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="68"
                        android:textColor="@color/black"
                        android:drawableStart="@drawable/ic_driven"
                        android:drawablePadding="@dimen/margin_x"
                        android:textSize="@dimen/font_16"
                        android:fontFamily="@font/poppins_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Km"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/font_14"
                        android:fontFamily="@font/poppins_semibold"/>
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/green"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_v"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="@dimen/margin_301"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_x"
                    android:layout_marginHorizontal="@dimen/margin_x"
                    android:background="@drawable/rect_curve_box">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/dark_grey"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="10sp"
                        android:text="Maximum Speed"
                        android:paddingBottom="@dimen/margin_v"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/margin_80"
                            android:layout_height="@dimen/margin_80"
                            android:layout_centerInParent="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/stop_sign"
                            app:tint="@color/grey_two" />

                        <TextView
                            android:id="@+id/tvSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/margin_xx"
                            android:fontFamily="@font/poppins_medium"
                            android:text="70"
                            android:textColor="@color/black"
                            android:textSize="@dimen/font_14" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/light_black"
                        android:gravity="center"
                        android:textSize="@dimen/font_12"
                        android:layout_gravity="center"
                        android:text="Km/h"/>


                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_v"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="0.9"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="@dimen/margin_30"
                            android:background="@color/light_black"
                            android:layout_marginTop="@dimen/margin_v"
                            android:layout_marginBottom="@dimen/margin_v"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_location"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/margin_x"
                        android:layout_weight="0.1">

                        <TextView
                            android:id="@+id/tvStartLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hno 1029 sector 34 chandigarh, punjab, pin 100023"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/font_10"
                            android:layout_marginStart="@dimen/margin_x"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:gravity="center_vertical" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/light_black"
                            android:layout_marginVertical="@dimen/margin_v"
                            />

                        <TextView
                            android:id="@+id/tvEndLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hno 1029 sector 34 chandigarh, punjab, pin 100023"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="@dimen/font_10"
                            android:layout_marginStart="@dimen/margin_x"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/light_black2"
                android:layout_marginTop="@dimen/margin_v"
                android:padding="@dimen/margin_v"
                android:weightSum="3">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/margin_25"
                        android:layout_height="@dimen/margin_25"
                        android:layout_marginTop="@dimen/margin_v"
                        android:src="@drawable/ic_speed"
                        app:tint="@color/med_grey" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/margin_v"
                        android:text="Over Speed"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/dark_grey"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOverspeedings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textAllCaps="true"
                        android:text="66 Times"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/black"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="invisible"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="@dimen/margin_25"
                        android:layout_height="@dimen/margin_25"
                        android:layout_marginTop="@dimen/margin_v"
                        android:src="@drawable/ic_white_alert"
                        app:tint="@color/med_grey" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/margin_v"
                        android:text="Alerts"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/dark_grey"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textAllCaps="true"
                        android:text="N/A"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/black"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="@dimen/margin_25"
                        android:layout_height="@dimen/margin_25"
                        android:layout_marginTop="@dimen/margin_v"
                        app:tint="@color/med_grey"
                        android:src="@drawable/ic_stoppages"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/margin_v"
                        android:text="Over Stoppages"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/dark_grey"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOverstoppages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="6 Times"
                        android:textAllCaps="true"
                        android:textSize="@dimen/font_10"
                        android:textColor="@color/black"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>