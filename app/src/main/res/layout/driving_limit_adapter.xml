<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLiveStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_x"
        app:cardBackgroundColor="@color/primary_little_fade"
        app:cardCornerRadius="@dimen/margin_x"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_x"
                android:background="@color/primaryblack">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:tint="@color/red"
                        android:src="@drawable/ic_car_twox"/>

                    <TextView
                        android:id="@+id/tvVehNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center_vertical"
                        android:text="Vehicle Number"
                        android:lines="1"
                        android:layout_marginStart="@dimen/margin_x"
                        android:textSize="@dimen/font_16"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tvDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/margin_v"
                    android:visibility="gone"
                    android:drawableStart="@drawable/ic_info_vector"
                    android:drawablePadding="@dimen/margin_x"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="center_vertical"
                    android:textColor="@color/red"
                    android:textSize="12sp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_x">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_x"
                        android:layout_marginTop="@dimen/margin_x"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            app:tint="@color/red"
                            android:src="@drawable/speedometer"/>
                        <TextView
                            android:id="@+id/tvDrivingCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:textSize="@dimen/font_16"
                            android:layout_marginStart="@dimen/margin_x"
                            android:text="2"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_grey"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_weight="0.5"
                            android:textSize="@dimen/font_12"
                            android:text="Count"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/margin_v"
                        android:layout_marginHorizontal="@dimen/margin_x"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            android:src="@drawable/ic_info_vector"
                            app:tint="@color/secondary_yellow" />
                        <TextView
                            android:id="@+id/tvDrivingLimit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:textSize="@dimen/font_16"
                            android:layout_marginStart="@dimen/margin_x"
                            android:text="60"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_grey"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_weight="0.5"
                            android:textSize="@dimen/font_12"
                            android:text="Driving Limit(hours)"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_x"
                        android:layout_marginVertical="@dimen/margin_v"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            app:tint="@color/primary_orange_secondary"
                            android:src="@drawable/ic_speed"/>
                        <TextView
                            android:id="@+id/tvHaltLimit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:textSize="@dimen/font_16"
                            android:layout_marginStart="@dimen/margin_x"
                            android:text="60"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_grey"
                            android:fontFamily="@font/poppins_medium"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_weight="0.5"
                            android:textSize="@dimen/font_12"
                            android:text="Halt limit(mins)"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_x"
                        android:layout_marginVertical="@dimen/margin_v"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/margin_25"
                            android:layout_height="@dimen/margin_25"
                            app:tint="@color/green"
                            android:src="@drawable/ic_time"/>
                        <TextView
                            android:id="@+id/tvDrivingDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_marginEnd="@dimen/margin_x"
                            android:layout_marginStart="@dimen/margin_x"
                            android:textSize="@dimen/font_12"
                            android:text="00:00:00 (HH:MM:SS)"
                            />

                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_v"
                android:visibility="gone"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/margin_x"
                        android:drawableStart="@drawable/ic_speed"
                        android:text="Over Speed Count"
                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/margin_x"
                        android:drawableStart="@drawable/ic_speed"
                        android:text="Over Speed limit"
                        />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="end"
                        android:layout_marginEnd="@dimen/margin_x"
                        android:layout_weight="0.5"
                        android:textSize="12sp"
                        android:text="5"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/margin_x"
                        android:drawableStart="@drawable/ic_speed"
                        android:text="Max Speed"
                        />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="end"
                        android:layout_marginEnd="@dimen/margin_x"
                        android:layout_weight="0.5"
                        android:textSize="12sp"
                        android:text="100 km/h"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/margin_x"
                        android:drawableStart="@drawable/ic_time"
                        android:text="Total Duration"
                        />



                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>