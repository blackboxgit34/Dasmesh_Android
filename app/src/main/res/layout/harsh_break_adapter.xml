<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_x"
        android:layout_marginBottom="@dimen/margin_x"
        app:cardBackgroundColor="@color/primary_little_fade"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/margin_x"
        app:cardCornerRadius="@dimen/margin_x">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_x"
                android:layout_marginHorizontal="@dimen/margin_x">
                <TextView
                    android:id="@+id/tvCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="20"
                    android:textSize="@dimen/font_16"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/med_grey"
                    android:text="Times"
                    android:layout_marginStart="@dimen/margin_v"
                    android:textSize="@dimen/font_10"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:id="@+id/tvViewOnMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="View on Map"
                    android:gravity="end"
                    android:visibility="invisible"
                    android:layout_marginStart="@dimen/margin_v"
                    android:textSize="@dimen/font_10"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_x"
                android:layout_marginBottom="@dimen/margin_x"
                android:layout_marginHorizontal="@dimen/margin_x">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Vehicle Name"
                    android:layout_weight="0.5"
                    android:textSize="@dimen/font_12"
                    android:fontFamily="@font/poppins_regular"/>
                <TextView
                    android:id="@+id/tvVehicleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/med_grey"
                    android:text="Driving Test"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_marginStart="@dimen/margin_v"
                    android:textSize="@dimen/font_10"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>